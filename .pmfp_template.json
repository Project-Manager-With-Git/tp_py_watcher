{
    "language": "py",
    "env": "venv",
    "description": "python监听文件系统的任务模板",
    "template_type": "watcher",
    "requires": [
        "pyproxypattern >= 0.0.1",
        "schema_entry >= 0.1.5",
        "pyloggerhelper >= 0.0.3",
        "watchdog >= 2.2.1"
    ],
    "test_requires": [
        "coverage >= 5.5",
        "mypy >= 0.800",
        "autopep8 >= 1.5.6",
        "pylint >= 2.8.0",
        "pydocstyle>=6.0.0"
    ],
    "template_keys": {
        "app_name": {
            "description": "应用名",
            "default": "{{ project_name }}"
        }
    },
    "components": {
        "watcher_app": {
            "source": "watcher/app.py.jinja",
            "description": "用于构造监听器应用的文件",
            "default_path": "{{ project_name }}/app.py"
        },
        "watcher_handdler": {
            "source": "watcher/handler.py.jinja",
            "description": "watchdog的使用模板,可以单独使用",
            "default_path": "{{ project_name }}/handdler.py"
        },
        "watcher": {
            "source": "watcher/watcher.py.jinja",
            "description": "watchdog的监听函数模版,可以单独使用",
            "default_path": "{{ project_name }}/watcher.py"
        },
        "main": {
            "source": "__main__.py.jinja",
            "description": "应用入口",
            "default_path": "{{ project_name }}/__main__.py"
        },
        "dockerfile": {
            "source": "cp_dockerfiles@v0.0.1//python_pyz_allinone_dockerfile",
            "description": "监听程序打包为镜像的dockerfile",
            "default_path": "dockerfile"
        },
        "docker_compose": {
            "source": "docker-compose.yml.jinja",
            "description": "watchdog的docker-compose模板,用于调试",
            "default_path": "{{ project_name }}/docker-compose.yml"
        }
    }
}