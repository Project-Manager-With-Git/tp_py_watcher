{
    "language": "py",
    "env": "venv",
    "description": "python监听文件系统的任务模板",
    "template_type": "watcher",
    "requires": [
        "pyproxypattern >= 0.0.1",
        "schema_entry >= 0.1.5",
        "pyloggerhelper >= 0.0.3",
        "watchdog >= 2.2.1"
    ],
    "test_requires": [
        "coverage >= 5.5",
        "mypy >= 0.800",
        "autopep8 >= 1.5.6",
        "pylint >= 2.8.0",
        "pydocstyle>=6.0.0"
    ],
    "template_keys": {
        "app_name": {
            "description": "应用名",
            "default": "{{ project_name }}"
        }
    },
    "components": {
        "eventfs_watcher_app": {
            "source": "tp_py_watcher@dev//eventfs_watcher_app",
            "description": "用于构造文件系统监听器的应用的文件",
            "default_path": "{{ project_name }}/app.py"
        },
        "eventfs_watcher_event_handdler": {
            "source": "tp_py_watcher@dev//eventfs_watcher_event_handdler",
            "description": "watchdog的使用模板,可以单独使用",
            "default_path": "{{ project_name }}/event_handdler.py"
        },
        "main": {
            "source": "tp_py_watcher@dev//main",
            "description": "应用的入口文件",
            "default_path": "{{ project_name }}/__main__.py"
        },
        "dockerfile": {
            "source": "cp_dockerfiles@v0.0.1//python_pyz_allinone_dockerfile",
            "description": "监听程序打包为镜像的dockerfile",
            "default_path": "dockerfile"
        },
        "docker-compose": {
            "source": "tp_py_watcher@dev//eventfs_docker_compose",
            "description": "watchdog的docker-compose模板,适用于调试",
            "default_path": "docker-compose.yml"
        }
    }
}